{
  "name": "lydos-api",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "typecheck": "bun --bun tsc --noEmit",
    "lint": "biome check --write",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "db:generate": "prisma generate --schema=./schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./schema.prisma",
    "db:push": "prisma db push --schema=./schema.prisma",
    "db:reset": "prisma migrate reset --schema=./schema.prisma",
    "db:studio": "prisma studio --schema=./schema.prisma",
    "db:seed": "bun run seed.ts"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.5",
    "@google/genai": "^1.41.0",
    "@hono/zod-openapi": "^1.2.0",
    "@prisma/client": "^6.2.0",
    "@scalar/hono-api-reference": "^0.9.37",
    "groq-sdk": "^0.37.0",
    "hono": "^4.11.6",
    "ioredis": "^5.9.2",
    "stripe": "^20.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "prisma": "^6.2.0",
    "typescript": "^5.9.3"
  }
}
