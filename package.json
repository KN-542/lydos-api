    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "@scalar/hono-api-reference": "^0.9.37",
    "hono": "^4.11.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
